<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/goback"
        android:id="@+id/btnBack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24sp"
        android:gravity="left"
        android:fontFamily="@font/hebrew_font"
        android:textColor="@color/textColor"
        android:id="@+id/tvGames"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="משחקים: "
        android:textSize="24sp"
        android:fontFamily="@font/hebrew_font"
        android:textColor="@color/textColor"
        android:gravity="left"/>
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24sp"
        android:fontFamily="@font/hebrew_font"
        android:textColor="@color/textColor"
        android:gravity="left"
        android:id="@+id/tvWins"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="נצחונות: "
        android:textColor="@color/textColor"
        android:fontFamily="@font/hebrew_font"
        android:textSize="24sp"
        android:gravity="left"/>
    </LinearLayout>
      
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/hebrew_font"
        android:gravity="left"
        android:id="@+id/tvLosses"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הפסדים: "
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/hebrew_font"
        android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24sp"
        android:gravity="left"
        android:fontFamily="@font/hebrew_font"
        android:textColor="@color/textColor"
        android:id="@+id/tvTies"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תיקו: "
        android:textSize="24sp"
        android:fontFamily="@font/hebrew_font"
        android:textColor="@color/textColor"
        android:gravity="left"/>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/defaultpp"
            android:layout_gravity="right"
            android:id="@+id/ivProfilePic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שם משתמש"
                android:textSize="30sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/hebrew_font"
                android:gravity="right"
                android:layout_marginRight="12dp"
                android:id="@+id/tvUsername"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/hebrew_font"
                android:layout_marginRight="50dp"
                android:text="צלם תמונה"
                android:id="@+id/btnCaptureImage"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/hebrew_font"
                android:layout_marginRight="45dp"
                android:text="העלה תמונה"
                android:id="@+id/btnUploadImage"/>

        </LinearLayout>

        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogOut"
        android:text="התנתק"
        android:fontFamily="@font/hebrew_font"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"/>
</LinearLayout>
