<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvTitle"
      android:gravity="center_horizontal"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="10"
    android:textSize="40sp"
    android:textColor="@color/textColor"
    android:fontFamily="@font/hebrew_font"
    android:id="@+id/tvCountDown"
        />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="שאלה"
      android:textSize="30sp"
      android:gravity="center"
      android:layout_marginBottom="20dp"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvQuestion"/>
  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="אני"
      android:textSize="22sp"
      android:layout_weight="1"
      android:gravity="left"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvMe"/>
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="יריב"
      android:textSize="22sp"
      android:layout_weight="1"
      android:gravity="right"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvOpponent"/>
     

    </TableRow>

  <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
  <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:id="@+id/ivMePic"
        android:src="@drawable/defaultpp"
  />
  <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
/>
  <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:id="@+id/ivOpponentPic"
        android:src="@drawable/defaultpp"
              />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="30sp"
      android:layout_weight="1"
      android:gravity="left"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvMyPoints"/>
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="30sp"
      android:layout_weight="1"
      android:gravity="right"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvOpponentPoints"/>
       
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="25sp"
      android:layout_weight="1"
      android:gravity="left"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvMyAnswer"/>
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="25sp"
      android:layout_weight="1"
      android:gravity="right"
      android:textColor="@color/textColor"
      android:fontFamily="@font/hebrew_font"
      android:id="@+id/tvOpponentAnswer"/>
        
    </TableRow>
  </TableLayout>
  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תשובה"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/hebrew_font"
        android:id="@+id/tvAnswer"
          />
  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="1"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn1"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="2"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn2"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="3"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn3"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="4"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn4"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="5"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn5"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="6"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn6"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="7"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn7"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="8"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn8"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="9"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn9"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="0"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btn0"/>
    </TableRow>
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="שלח"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btnSend"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="מחק"
          android:fontFamily="@font/hebrew_font"
          android:id="@+id/btnDelete"/>
    </TableRow>
  </TableLayout>

</LinearLayout>
